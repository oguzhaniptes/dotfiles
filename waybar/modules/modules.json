{
  // --------- Left Icons --------- //

  //  App Menu
  "custom/appmenu": {
    "format": "Û∞£á  Arch",
    "format-icons": {},
    "on-click": "sleep 0.2;rofi -show drun -show-icons -replace",
    "tooltip": false
  },

  // Hyprland Window
  "hyprland/window": {
    "rewrite": {
      "(.*) - nvim": "ÓüÖ $1",
      "(.*) - Google Chrome": "Google Chrome",
      "(.*) - Visual Studio Code": "Visual Studio Code",
      "(.*) - Sublime Text (.*)": "Sublime Text",
      "(.*) - Discord": "Discord",
      "OBS (.*)": "OBS"
    },
    "separate-outputs": true
  },

  // Taskbar
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 20,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    // "ignore-list": ["Alacritty"],
    "app_ids-mapping": {
      // "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "rewrite": {
      // "Firefox Web Browser": "Firefox",
      // "Foot Server": "Terminal"
    }
  },

  // --------- Center Icons --------- //

  // Clock
  "clock": {
    "format": "Ôëï  {:%d %a %B Ôê∫  %H:%M}",
    "tooltip-format": "<big>{calendar}</big>",
    "format-alt": "{:%d-%m-%Y}",
    "format-icons": ["ÔÄó"]
  },

  // Weather
  "custom/weather": {
    "format": "{}",
    "format-alt": "{alt}: {}",
    // "format-alt-click": "click-right",
    "interval": 3600,
    "exec": "curl -s 'https://wttr.in/konya?format=1'",
    "exec-if": "ping wttr.in -c1"
  },

  // --------- Right Icons --------- //

  // Workspaces
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{}",
    "persistent-workspaces": {
      "*": 2
    }
  },

  "group/hardware": {
    "orientation": "horizontal",
    "modules": ["memory", "cpu", "battery"]
  },

  "battery": {
    "interval": 2,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "Û∞ÇÑ  {capacity}%",
    "format-plugged": "Û±îù  {capacity}%",
    "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "]
  },

  "cpu": {
    "interval": 1,
    "format": "Ôãõ {usage}%",
    "on-click": "kitty -e htop"
    // "format": "ÓÄÅ  {max_frequency}GHz <span color=\"darkgray\">| {usage}%</span>",
  },

  "memory": {
    "interval": 10,
    // "format": "‚ò∞ {used:0.2f} / {total:0.0f} GB",
    "format": "ÓøÖ  {used:0.1}G",
    "on-click": "kitty -e htop"
  },

  "group/control": {
    "orientation": "horizontal",
    "modules": ["backlight", "pulseaudio", "network"]
  },

  "backlight": {
    "device": "amdgpu_bl2",
    "format": "{icon} {percent}%",
    "format-alt": "{percent}% {icon}",
    "format-alt-click": "click-right",
    //"format-icons": ["ÔÉ´", "Ô†¥"],
    "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†", "Û∞Éö"],
    "scroll-step": 1,
    "on-scroll-down": "brightnessctl s 5%-",
    "on-scroll-up": "brightnessctl s +5%"
  },

  "pulseaudio": {
    "scroll-step": 5,
    "format": "{icon} {volume}% {format_source}",
    "format-bluetooth": "{volume}% {format_source}",
    "format-bluetooth-muted": " {icon} {format_source}",
    "format-muted": "Ôö© {format_source}",
    "ignored-sinks": ["Easy Effects Sink"],
    "max-volume": 150,
    "format-source": "ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
    },
    "on-click": "pavucontrol",
    "on-click-middle": "pulseaudio-control --node-blacklist 'easyeffects_sink' next-node",
    "on-click-right": "pactl set-source-mute @DEFAULT_SOURCE@ toggle"
  },

  "network": {
    "interval": 1,
    "format": "{ifname}",
    "format-wifi": "Û∞§® {essid}",
    "format-ethernet": "Û∞àÄ {ifname}",
    "format-disconnected": "Û∞åô",
    "tooltip-format": "{ifname}",
    "tooltip-format-wifi": "Û∞§® {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nnÔÇì Up: {bandwidthUpBits} ÔÄô Down: {bandwidthDownBits}",
    "tooltip-format-ethernet": "Û∞àÄ {ifname}\nIP: {ipaddr}\nÔÇì up: {bandwidthUpBits} ÔÄô down: {bandwidthDownBits}",
    "tooltip-format-disconnected": "Disconnected",
    "format-linked": "{ifname} (No IP) Ôûñ",
    "format-alt": "{ifname}: IP:{ipaddr}",
    "on-click": "wl-copy $(ip address show up scope global | grep inet | head -n1 | cut -d/ -f 1 | tr -d [:space:] | cut -c5-)"
  },

  // Tay Icons
  "tray": {
    "icon-size": 16,
    "spacing": 5
  },

  // Power Menu
  "custom/exit": {
    "format": "ÔÄë ",
    "on-click": "wlogout",
    "tooltip": false
  }

