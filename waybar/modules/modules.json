  // Browser Launcher
  // "custom/browser": {
  //   "format": "",
  //   "on-click": "~/dotfiles/.settings/browser.sh",
  //   "tooltip": false
  // },

  // Calculator
  "custom/calculator": {
    "format": "",
    "on-click": "kalk",
    "tooltip": false
  },

  // Keyboard State
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "",
      "unlocked": ""
    }
  },

  // System
  "custom/system": {
    "format": "",
    "tooltip": false
  },

  // CPU
  // "cpu": {
  //   "format": "/ C {usage}% ",
  //   "on-click": "alacritty -e htop"
  // },

  // Memory
  // "memory": {
  //   "format": "/ M {}% ",
